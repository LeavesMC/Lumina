+    }
+
+    private static void toggleSubscription(CommandSender sender, Player target, String logName) {
+        if (LoggerRegistry.getLogger(logName) == null) {
+            sender.sendMessage(text("Unknown logger: " + logName).color(RED));
+            return;
+        }
